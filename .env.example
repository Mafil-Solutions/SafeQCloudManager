# SafeQ Manager - Environment Variables
# Copy to .env and fill your values (NOT encrypted, only for local dev)

# ============================================
# API Configuration
# ============================================
SERVER_URL=https://your-server.com:7300
API_KEY=your_api_key_here

# ============================================
# Entra ID Configuration
# ============================================
TENANT_ID=your-tenant-id
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
AUTHORITY=https://login.microsoftonline.com/YOUR_TENANT_ID
REDIRECT_URI=http://localhost:8501

# ============================================
# Access Control
# ============================================
ENABLE_GROUP_RESTRICTION=True
# הרשאות מוגדרות דרך קבוצות Entra ID:
# SafeQ-View, SafeQ-Support, SafeQ-Admin, SafeQ-SuperAdmin
# (ראה ROLE_MAPPING בקובץ config.py)

# ============================================
# Providers
# ============================================
PROVIDER_LOCAL=12348
PROVIDER_ENTRA=12351

# ============================================
# Session
# ============================================
SESSION_TIMEOUT=120
USE_ENTRA_ID=True
LOG_TO_FILE=True
LOG_TO_DATABASE=True