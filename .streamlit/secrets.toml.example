# SafeQ Manager - Streamlit Cloud Secrets
# Copy these to your Streamlit Cloud app: Settings → Secrets

# API Configuration
SERVER_URL = "https://your-server.com:7300"
API_KEY = "your_api_key_here"

# Entra ID Configuration
TENANT_ID = "your-tenant-id"
CLIENT_ID = "your-client-id"
CLIENT_SECRET = "your-client-secret"
AUTHORITY = "https://login.microsoftonline.com/YOUR_TENANT_ID"
REDIRECT_URI = "https://your-app.streamlit.app"

# Access Control
ENABLE_GROUP_RESTRICTION = true
# הרשאות מוגדרות דרך קבוצות Entra ID:
# SafeQ-View, SafeQ-Support, SafeQ-Admin, SafeQ-SuperAdmin
# (ראה ROLE_MAPPING בקובץ app/config.py)

# Providers
PROVIDER_LOCAL = "12348"
PROVIDER_ENTRA = "12351"

# Session
SESSION_TIMEOUT = "120"
USE_ENTRA_ID = true

# Emergency Local Users (for backup access when Entra ID is down)
# Format: username = "plain_text_password"
# Note: Streamlit Cloud encrypts secrets.toml automatically - no need for double encryption
[EMERGENCY_USERS]
# admin = "MySecurePassword123"
# backup = "AnotherSecurePass456"