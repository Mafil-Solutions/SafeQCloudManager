# SafeQ Manager - Streamlit Cloud Secrets
# Copy these to your Streamlit Cloud app: Settings â†’ Secrets

# API Configuration
SERVER_URL = "https://your-server.com:7300"
API_KEY = "your_api_key_here"

# Entra ID Configuration
TENANT_ID = "your-tenant-id"
CLIENT_ID = "your-client-id"
CLIENT_SECRET = "your-client-secret"
AUTHORITY = "https://login.microsoftonline.com/YOUR_TENANT_ID"
REDIRECT_URI = "https://your-app.streamlit.app"

# Access Control
ENABLE_GROUP_RESTRICTION = true
AUTHORIZED_GROUPS = "SafeQ-Administrators,SafeQ-Managers"
ADMIN_GROUPS = "SafeQ-Administrators"
SUPERADMIN_GROUP = "SafeQ-SuperAdmin"

# Providers
PROVIDER_LOCAL = "12348"
PROVIDER_ENTRA = "12351"

# Session
SESSION_TIMEOUT = "120"
USE_ENTRA_ID = true

# Emergency Local Users (for backup access when Entra ID is down)
# Format: username = "SHA256_hashed_password"
# To generate hash: python3 -c "import hashlib; print(hashlib.sha256('YourPassword'.encode()).hexdigest())"
[EMERGENCY_USERS]
